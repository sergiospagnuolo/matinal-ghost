{{!< default}}

{{!-- HEADER / TÍTULO DA PÁGINA CULTURA --}}
<section class="px-5 sm:px-6" data-tag-hero="">
  <div class="max-w-site mx-auto flex flex-col items-center justify-center text-center gap-6 py-12">
    <h1 class="font-semibold tracking-tight text-3xl sm:text-4xl md:text-5xl">
      Cultura
    </h1>
  </div>

  {{!-- Linha divisória abaixo do título --}}
  <div class="max-w-site mx-auto border-t-3 border-brd-soft pt-8"></div>
</section>


{{!-- HERO + COLUNAS dentro do mesmo bloco GET --}}
{{#get "posts"
  filter="primary_tag:cultura+(tag:[reportagem,resenha])"
  include="tags,authors"
  limit="1"
  order="published_at desc"
}}
  {{#if posts}}
    <section class="px-5 sm:px-6 mt-6">
      <div class="max-w-site mx-auto">
        {{!-- HERO --}}
        {{#foreach posts}}
          <article class="{{post_class}} relative flex flex-col gap-4 md:flex-row md:gap-5 lg:gap-0 text-typ" data-post-card data-featured>
            {{#if feature_image}}
              <a href="{{url}}" class="flex-1 relative group">
                <figure class="block flex-1 rounded-theme overflow-hidden" role="none">
                  <img
                    class="w-full aspect-[3/2] bg-bgr object-cover rounded-[inherit] group-hover:opacity-90 transition-opacity"
                    src="{{img_url feature_image size="l"}}"
                    alt="{{title}}"
                    loading="eager"
                  >
                </figure>
              </a>
            {{/if}}

            <div class="bg-bgr flex-1 flex flex-col justify-center gap-2.5 self-center lg:p-8 lg:pr-0 lg:-ml-8 z-1">
              {{#if tags}}
                <div class="inline-flex whitespace-nowrap font-sans font-normal uppercase text-[0.8rem]">
                  <ul class="flex gap-2 font-semibold">
                    {{#foreach tags}}
                      {{^match slug "cultura"}}
                        <li><a href="{{url}}" class="text-brand decoration-2 underline-offset-2 hover:underline">{{name}}</a></li>
                      {{/match}}
                    {{/foreach}}
                  </ul>
                </div>
              {{/if}}

              <h1 class="text-2xl font-semibold sm:text-3xl lg:text-4xl">
                <a href="{{url}}" class="hover:underline underline-offset-4">{{title}}</a>
              </h1>

              {{#if excerpt}}
                <p class="text-base leading-normal md:text-lg">{{excerpt}}</p>
              {{/if}}

              <div class="leading-tight text-[0.8rem] font-sans uppercase font-normal opacity-75">
                <div class="inline">
                  <span class="opacity-75 font-body font-medium lowercase italic">Por</span>
                  {{#foreach authors}}
                    <a href="{{url}}">{{name}}</a>{{#unless @last}}<span class="opacity-75 font-body font-medium lowercase italic"> e </span>{{/unless}}
                  {{/foreach}}
                </div>
                <div class="inline">
                  <span class="mx-1.5 text-brd-soft">/</span>
                  <time class="opacity-75 font-medium whitespace-nowrap" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                </div>
              </div>
            </div>
          </article>
        {{/foreach}}
      </div>

    

    </section>



{{!-- SEÇÃO: DESTAQUES DA AGENDA — layout alternativo equilibrado (topic-5posts-alt) --}}
<section class="px-5 sm:px-6 mt-16" data-topic="destaques-da-agenda" data-layout-alt>
  <div class="max-w-site mx-auto">

    {{!-- Cabeçalho --}}
    <div class="flex items-end mb-6" data-section-head="">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-[calc(var(--font-weight-headings)_+_100)]! leading-none -mb-1">
        Destaques da agenda
      </h2>
      <span class="flex-1 border-b-3 border-brd ml-3"></span>
      <a href="https://matinal.org/agenda" class="group uppercase font-sans text-xs sm:text-sm font-semibold flex items-center gap-0.5 bg-brd px-2.5 pl-4 py-1.5 text-bgr hover:bg-brand hover:text-brand-contrast">
        <span>Confira a agenda completa</span>
        <i class="icon icon-chevron-right size-4 stroke-3" role="presentation">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M9 6l6 6l-6 6"/>
          </svg>
        </i>
      </a>
    </div>

    {{#get "posts"
      filter="primary_tag:cultura+tag:destaques-da-agenda+id:-{{posts.[0].id}}"
      include="tags,authors,tiers"
      limit="5"
      order="published_at desc"
    }}
      {{#if posts}}
        <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-4">

          {{!-- Coluna esquerda (2 posts) --}}
          <div class="flex flex-col gap-5 pb-5 border-b border-brd-soft sm:pb-0 sm:border-b-0 sm:pr-5 sm:border-r" data-topic-secondary="1">
            {{#foreach posts from="1" to="1"}}
              {{> cards/post-card-vertical
                card_class=""
                excerpt_class="hidden"
              }}
            {{/foreach}}
            {{#foreach posts from="2" to="2"}}
              {{> cards/post-card-vertical
                card_class="border-t border-brd-soft pt-5"
                excerpt_class="hidden"
              }}
            {{/foreach}}
          </div>

          {{!-- Post principal central (maior e mais equilibrado) --}}
          <div class="sm:col-span-2 pb-5 border-b border-brd-soft lg:pb-0 lg:border-b-0 lg:px-5 lg:border-r" data-topic-main>
            {{#foreach posts from="3" to="3"}}
              {{> cards/post-card-vertical
                card_class="[&_[data-post-card-type]]:lg:scale-110"
                title_class="lg:text-3xl"
                excerpt_class="md:text-lg"
              }}
            {{/foreach}}
          </div>

          {{!-- Coluna direita (2 posts) --}}
          <div class="flex flex-col gap-5" data-topic-secondary="2">
            {{#foreach posts from="4" to="4"}}
              {{> cards/post-card-vertical
                card_class=""
                excerpt_class="hidden"
              }}
            {{/foreach}}
            {{#foreach posts from="5" to="5"}}
              {{> cards/post-card-vertical
                card_class="border-t border-brd-soft pt-5"
                excerpt_class="hidden"
              }}
            {{/foreach}}
          </div>

        </div>
      {{else}}
        <p class="text-sm text-typ-tone mt-4">Nenhum destaque encontrado.</p>
      {{/if}}
    {{/get}}

  </div>
</section>




