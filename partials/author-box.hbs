{{#if access}}
  {{#primary_author}}
    <section class="px-5 sm:px-6 mb-8">
      <div class="max-w-content mx-auto">
        {{!-- <h2 class="text-sm font-sans! font-semibold! uppercase border-b-3 border-brd pb-0.5">{{t "About the author"}}</h2> --}}
        <div class="flex flex-row gap-3 p-5 border-t-3 border-brd-soft bg-bgr-tone">
          {{#if profile_image}}
            <a href="{{url}}">
              <figure class="rounded-full h-full relative" role="none">
                {{> image
                  image_type="author"
                  image_class="object-cover size-20 rounded-full aspect-square"
                  image_url=profile_image
                  size_xs=true
                  size_s=true
                  size_m=true
                  sizes="80px"
                }}
              </figure>
            </a>
          {{/if}}
          <div class="flex-1 flex flex-col gap-1.5 max-w-100">
            <h3 class="font-semibold tracking-tight text-lg md:text-xl"><a href="{{url}}" class="hover:text-brand">{{name}}</a></h3>

            {{#if bio}}
              <p class="text-sm md:text-base text-typ-tone leading-tight">{{bio}}</p>
            {{/if}}

            <a href="{{url}}" class="mt-1 font-sans text-xs uppercase font-semibold text-typ hover:text-brand flex items-center gap-0.5 hover:gap-0.75">
              <span>{{t "All articles"}}</span>
              {{> icon name="chevron-right" icon_class="size-3.25 stroke-[3]"}}
            </a>
          </div>
        </div>
      </div>
    </section>
  {{/primary_author}}
{{/if}}