{{!< default}}

{{!-- Hero --}}
{{#page}}
  {{> page-hero}}
{{/page}}

<section class="px-5 sm:px-6" data-topics>
  <div class="max-w-site mx-auto border-t-3 border-brd-soft py-6 gap-6 grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    {{#if page.tags.length}}
      {{#foreach page.tags}}
        {{> cards/tag-card}}
      {{/foreach}}
    {{else}}
      {{#get "tags" limit="60" include="count.posts" order="count.posts desc"}}
        {{#foreach tags}}
          {{> cards/tag-card}}
        {{/foreach}}
      {{/get}}
    {{/if}}
  </div>
</section>