{{!< default}}

{{!-- Hero (mesmo padding do tema) --}}
<section class="px-5 sm:px-6" data-page-hero>
  <div class="max-w-site py-12 mx-auto flex flex-col gap-6 text-center">
    <div class="flex-1 max-w-xl flex flex-col gap-3 md:gap-4 md:py-4 justify-center mx-auto items-center">
      <h1 class="font-semibold tracking-tight text-3xl sm:text-4xl md:text-5xl">Opinião</h1>
      <p class="text-lg md:text-xl text-typ-tone text-balance">Artigos e análises dos nossos colunistas</p>
    </div>
  </div>
</section>

<section class="px-5 sm:px-6" data-writers>
  <div class="max-w-site mx-auto border-t-3 border-b border-brd-soft py-6 flex flex-col gap-6">

    {{#get "authors" filter="slug:[juremir,marcela,claudia]" include="count.posts"}}
      {{#foreach authors}}
        <div class="flex flex-col gap-3 sm:flex-row border-b border-brd-soft pb-6">

          <div class="flex flex-row gap-3 flex-2">
            {{#if profile_image}}
              <figure class="flex-shrink-0">
                <img src="{{profile_image}}" alt="{{name}}" style="width:80px; height:80px; border-radius:9999px; object-fit:cover; object-position:center; border:1px solid var(--brd-soft);" loading="lazy">
               </figure>
            {{/if}}

            <div class="flex-1 flex flex-col gap-1.5 max-w-80">
              <h3 class="font-semibold tracking-tight text-lg md:text-xl">
                <a href="{{url}}" class="hover:text-brand">{{name}}</a>
              </h3>

              {{#if bio}}
                <p class="text-sm md:text-base text-typ-tone leading-tight line-clamp-3">{{bio}}</p>
              {{/if}}

              <a href="{{url}}" class="mt-1 font-sans text-xs uppercase font-semibold text-typ hover:text-brand flex items-center gap-0.5 hover:gap-0.75">
                <span>Todos os artigos</span>
                <i class="icon icon-chevron-right size-3.25 stroke-[3]" role="presentation">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-right" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z"/><path d="M9 6l6 6l-6 6"/></svg>
                </i>
              </a>
            </div>
          </div>

          <div class="hidden lg:flex flex-col md:flex-row gap-3 flex-3">
              {{#get "posts" filter="authors:{{slug}}" limit="3" include="tags"}}
              {{#foreach posts}}

                <article class="flex-1 border-l border-brd-soft pl-4">

{{#foreach tags from="2" to="2"}}
  <ul class="flex gap-2 font-semibold font-sans uppercase text-[0.85rem] mb-2" data-post-card-tags>
    <li>
      <a href="{{url}}" class="text-brand decoration-2 underline-offset-2 hover:underline">
        {{name}}
      </a>
    </li>
  </ul>
{{/foreach}}



         <h3 class="font-semibold text-sm md:text-base leading-snug">
    <a href="{{url}}" class="hover:underline underline-offset-4 decoration-2">{{title}}</a>
  </h3>
</article>
              {{/foreach}}
            {{/get}}
          </div>

        </div>
      {{/foreach}}
    {{/get}}

  </div>
</section>