{{#match @page.show_title_and_feature_image}} 
  <section class="px-5 sm:px-6" data-page-hero>
    <div class="max-w-site py-12 mx-auto flex flex-col gap-6 {{#if align_left}}md:gap-8 text-left md:flex-row{{else}}text-center{{/if}}">
      <div class="flex-1 max-w-xl flex flex-col gap-3 md:gap-4 md:py-4 justify-center {{#if align_left}}{{else}}mx-auto items-center{{/if}}">
        <h1 class="font-semibold tracking-tight text-3xl sm:text-4xl md:text-5xl">{{title}}</h1>
        {{#if custom_excerpt}}
          <p class="text-lg md:text-xl text-typ-tone text-balance [&_a]:underline [&_a]:decoration-2 [&_a]:underline-offset-2 [&_a:hover]:text-brand">{{{custom_excerpt}}}</p>
        {{/if}}
      </div>
      {{#if feature_image}}
        <figure class="flex-1 h-full w-full left-0 top-0 max-w-content mx-auto">
          {{> image
            picture_class="flex h-full"
            image_type="post"
            image_class="w-full object-cover object-center rounded-theme"
            image_url=feature_image
            size_s=true
            size_m=true
            size_l=true
            size_xl=true
            sizes="(max-width: 767px) 90vw, (max-width: 1200px) 45vw, 600px"
            loading="eager"
          }}
          {{#if feature_image_caption}}
            <figcaption class="font-sans mt-1 text-xs opacity-80 text-typ-tone [&>a]:underline [&>a]:underline-offset-2 [&>a:hover]:text-brand text-center">{{feature_image_caption}}</figcaption>
          {{/if}}
        </figure>
      {{/if}}
    </div>
  </section>
{{/match}}