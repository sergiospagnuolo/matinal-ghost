{{!< default}}

{{#post}}
  {{> post-hero
    type="regular-image"
    media_class="max-w-content"
  }}

  <article class="ghost-content prose prose-lg prose-theme"{{#unless access}} data-preview{{/unless}}>
    {{content}}

    {{#get "posts" filter="tag:parentese+tag:hash-edicao-atual" limit="10"}}
    <h2 class="text-lg font-semibold mb-2">Veja mais desta edição:</h2>
      {{#foreach posts}}
          <section class="parent-post-info pb-4 mb-4">
            <a href="{{url}}" class="text-blue-400 hover:underline">
              {{title}}
            </a>
          </section>
      {{/foreach}}
    {{/get}}
  </article>

  {{> author-box}}

  {{> post-tags}}

  {{> comments}}

  {{> related-tag}}

  {{> related-author}}

  {{> sections/sponsored}}
{{/post}}
