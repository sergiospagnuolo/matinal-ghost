<section class="px-5 sm:px-6 {{hero_class}}" data-post-hero="{{type}}">
  <div class="max-w-site mx-auto py-8 flex items-center flex-col gap-6 {{wrapper_class}}">

    {{!-- Content --}}
    <div class="text-typ-tone w-full flex-1 flex flex-col gap-4 mx-auto max-w-content {{#match @custom.post_title_alignment "center"}}items-center text-center{{/match}} {{content_class}}" data-post-hero-content>
      {{!-- Tag, date, reading time --}}
      {{#is "post"}}
        {{#if tags}}
          <ul class="font-sans uppercase text-sm flex gap-2 font-semibold" data-post-tags>
            {{#foreach tags limit="1"}}
              <li><a href="{{url}}" class="text-brand decoration-2 underline-offset-2 hover:underline">{{name}}</a></li>
            {{/foreach}}
          </ul>
        {{/if}}
      {{/is}}

      {{!-- Title --}}
      <h1 class="text-typ font-semibold tracking-tight text-2xl md:text-3xl md:font-medium lg:text-4xl{{^is "post"}} xl:text-5xl{{/is}}">
        {{title}}
      </h1>

      {{!-- Excerpt --}}
      {{#if custom_excerpt}}
        <p class="text-base md:text-lg {{#match @custom.post_title_alignment "center"}}max-w-[80%] mx-auto{{/match}}">{{custom_excerpt}}</p>
      {{/if}}

      {{!-- Authors --}}
      {{#is "post"}}
        <div class="leading-tight text-sm font-sans uppercase font-normal [&_a]:font-medium [&_a]:hover:underline [&_a]:decoration-2 [&_a]:underline-offset-2" data-post-authors>
          <span class="opacity-75 font-body font-medium lowercase italic">{{t "By"}}</span>
          {{#foreach authors}}{{#unless @first}}<span class="opacity-75 font-body font-medium lowercase italic">{{#if @last}} and{{else}},{{/if}}</span>{{/unless}}
            <a href="{{url}}">{{name}}</a>{{/foreach}}
        </div>
      {{/is}}
    </div>

    {{!-- Feature image --}}
    {{#if feature_image}}
      <figure class="w-full h-full relative {{#if media_class}}{{media_class}}{{else}}max-w-content{{/if}}">
        {{#if image_sizes}}
          {{> image
            image_type="post"
            image_class="w-full object-cover rounded-theme aspect-16/9 bg-bgr-tone"
            image_url=feature_image
            size_s=true
            size_m=true
            size_l=true
            size_xl=true
            sizes=image_sizes
            loading="eager"
          }}
        {{else}}
          {{> image
            image_type="post"
            image_class="w-full object-cover rounded-theme aspect-16/9 bg-bgr-tone"
            image_url=feature_image
            size_s=true
            size_m=true
            size_l=true
            size_xl=true
            sizes="(max-width: 767px) 90vw, 720px"
            loading="eager"
          }}
        {{/if}}
        {{!-- Figcaption --}}
        {{#if feature_image_caption}}<figcaption class="font-sans mt-1 text-xs opacity-80 text-typ-tone [&>a]:underline [&>a]:underline-offset-2 [&>a:hover]:text-brand text-center">{{feature_image_caption}}</figcaption>{{/if}}
      </figure>
    {{/if}}

  </div>
</section>

{{> post-info info_class=info_class}}